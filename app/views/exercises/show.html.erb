
<br>
  <% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %>">
      <%= value %>
    </div>
    <br>
  <% end %>

<div class="row">
  <div class="col-md-8  col-sm-8  col-xs-12">


        <%= videojs_rails id:"example_video_1" ,  sources: { mp4: @exercise.video_url}  %>

  </div>
  <div class="col-md-4 col-sm-4 col-xs-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><strong><%= t 'other.name' %> : </strong><%= @exercise.name %></h3>
      </div>
      <div class="panel-body">
        <p>
          <strong><%= t('other.type') %></strong>
          <%= @exercise.part %>
        </p>

        <p>
          <strong><%= t('other.descp') %></strong>
          <%= @exercise.description %>
        </p>

        <p>
          <strong><%= t('other.descp_fa') %></strong>
          <%= @exercise.description_fa %>
        </p>

        <p>
          <strong><%= t('other.level')%> :</strong>
          <% case @exercise.level %>
          <% when 0%>
              <%= t('other.basic') %>
          <% when 1%>
              <%= t('other.inter') %>
          <% when 2%>
              <%= t('other.diff') %>
          <% end%>
        </p>

        <p>
          <strong><%= t('other.equipment')%> :</strong>
          <%= @exercise.equipment.name %>
        </p>

        <p>
          <strong><%= t('other.dpw') %> :</strong>
          <%= @exercise.days_per_week %>
        </p>
      </div>



    </div>
  </div>
</div>
  <br>
  <div class="row">

  </div>


<%= link_to t('other.edit'), edit_exercise_path(@exercise) %> |
