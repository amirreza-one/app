<%= form_for(@exercise) do |f| %>
  <% if @exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exercise.errors.count, "error") %> Add Exercise </h2>

      <ul>
      <% @exercise.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t'other.name' ,:class => 'col-sm-4 control-label'%><br>
          <%= f.text_field :name ,:class => 'form-control ', :placeholder => 'name'%>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t'other.part' ,:class => 'col-sm-4 control-label'%><br>
          <%= f.select :part, [t('other.abss') , t('other.chest') , t('other.backk') , t('other.leg') , t('other.arms')] ,{}, {:class => 'form-control'}%>
        </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label  t'other.dpw' ,:class => 'col-sm-4 control-label'%><br>
          <%= f.number_field :days_per_week ,:class => 'form-control '%>
        </div>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t'other.level' ,:class => 'col-sm-4 control-label'%><br>
          <%= f.select :level, options_for_select([[t('other.basic'),'0'],[t('other.inter'),'1'] , [t('other.diff'),'2']]),{} ,{:class => 'form-control'}%>
          </div>
        </div>
      </div>


    <br>
    <script type="text/javascript">
        $(function() {
            $('#exercise_equipment_name').autocomplete({
                source: $('#exercise_equipment_name').data('autocomplete-source')
            });
        });
    </script>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t('other.equipment') ,:class => 'col-sm-4 control-label'%>
          <%= f.text_field :equipment_name ,:data => {autocomplete_source: Equipment.order(:name).map(&:name)},:class => 'form-control ', :placeholder => 'Equipment Name' %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t'other.descp' ,:class => 'col-sm-4 control-label'%><br>
          <%= f.text_area :description ,:class => 'form-control ',size: "24x6", :placeholder => 'Description English' %>
         </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t'other.descp_fa' ,:class => 'col-sm-4 control-label'%><br>
          <%= f.text_area :description_fa ,:class => 'form-control ',size: "24x6", :placeholder => 'توضیح فارسی'%>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t'other.vid_link' ,:class => 'col-sm-4 control-label'%><br>
          <%= f.file_field :video %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t'other.avatar' ,:class => 'col-sm-4 control-label'%><br>
          <%= f.file_field :avatar %>
        </div>
      </div>
    </div>
    <br>
    <br>
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary'%>
    </div>
<% end %>
