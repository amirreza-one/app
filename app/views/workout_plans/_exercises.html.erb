
<div class="table-responsive" >
  <table class="table table-hover" id="test">
    <thead>
    <tr>
      <th><%= t('other.avatar') %></th>
      <th><strong><%= t('other.part') %></strong></th>
      <th><%= t('other.name') %></th>
      <th><%= t('other.level') %></th>
      <th><%= t('other.equipment') %></th>
      <th><%= t('other.dpw') %></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @exercises.each do |exercise| %>
        <tr>
          <td><%= image_tag exercise.avatar.url(:thumb) ,{id: exercise.id , class: "img-circle img-responsive img-thumbnail" , width: "100" , height: "100" , alt: "Exercise"}%>
          <td><strong><%= exercise.part %></strong></td>
          <td><%= exercise.name.capitalize %></td>
          <td>
            <% case exercise.level %>
            <% when 0%>
                <%= t('other.basic') %>
            <% when 1%>
                <%= t('other.inter') %>
            <% when 2%>
                <%= t('other.diff') %>
            <% end %>
          </td>
          <td><%= exercise.equipment.name.capitalize %></td>
          <td><%= exercise.days_per_week %></td>
          <td><%=link_to raw('<button class="btn btn-primary"> <strong>+</strong> </button>'),
                 workout_includings_path(:workout_plan_id => @workout_plan.id, :exercise_id => exercise.id),
                 method: :post, remote: true %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>