<div class="row" style="min-height: 450px">
  <div class="col-md-3 col-sm-3">
    <ul class="nav nav-pills nav-stacked">
      <li class="active" style="width: 100%"><%= link_to raw("#{t 'other.inbox'} <span class='badge pull-right'>#{@inbox}</span>") , :controller => 'messages' , :action => 'inbox' %></li>
      <li style="width: 100%"><%= link_to t('other.sent') , :controller => 'messages' , :action => 'sent' %></li>
    </ul>
  </div>
<div class="col-md-9 col-sm-9">
  <h1><%= t 'other.inbox' %></h1>
  <br>
  <br>
  <div class="table-responsive ">
    <table class="table ">
      <col width="15%">
      <col width="15%">
      <col width="60%">
      <col width="10%">
      <thead>
      <tr>
        <th></th>
        <th><%= t 'other.from' %></th>
        <th><%= t 'other.content' %></th>
        <th></th>
      </tr>
      </thead>
      <tbody id="inboxes">
        <%= render :partial => 'message_list_inbox' %>
      </tbody>
    </table>
  </div>

  <br>
  <%= will_paginate @messages, renderer: BootstrapPagination::Rails %>
</div>

</div>