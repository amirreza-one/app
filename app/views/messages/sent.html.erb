
<div class="row" style="min-height: 450px">
  <div class="col-md-3 col-sm-3">
    <ul class="nav nav-pills nav-stacked">
      <li style="width: 100%"><%= link_to raw("#{t 'other.inbox'} <span class='badge pull-right'>#{@inbox}</span>") , :controller => 'messages' , :action => 'inbox' %></li>
      <li class="active" style="width: 100%"><%= link_to "#{t 'other.sent'}" , :controller => 'messages' , :action => 'sent' %></li>
    </ul>
  </div>
  <div class="col-md-9 col-sm-9">

    <div id="sent">
      <%= render partial: 'message_list_sent' %>
    </div>
    <%= will_paginate @messages, renderer: BootstrapPagination::Rails %>

  </div>

</div>