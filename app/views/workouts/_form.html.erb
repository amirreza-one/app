<%= form_for(@workout, :html => { :class => 'form-horizontal' , :role => "form" }) do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workout.errors.count, "error")+" "+t('other.workout-err')%> </h2>

      <ul>
      <% @workout.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
            <%= f.label "#{t('other.workout_plan')}" ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.text_field :workout_plan_id ,:class => 'form-control ' %>
            </div>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <%= f.submit t('other.create') , :class => 'btn btn-info'  %>
    </div>
<% end %>
