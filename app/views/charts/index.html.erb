<%= javascript_include_tag "Charts/rails" , "Charts/highcharts"  %>
<h2><%= t 'other.bmichart' %></h2>
<div style="direction: ltr">
<script type="text/javascript" charset="utf-8">
    $(function(){


        new Highcharts.Chart({
            chart: {
                renderTo:"BMI"
            },
            title: {
                text:"<%= t 'other.bmichart' %>"
            },
            xAxis: {
                type: "datetime"
            },
            yAxis: {
                title: {
                    text: "BMI"
                }
            },
            series: [{
                name: "BMI",
                color: 'rgb(94,94,148)',
                // pointInterval: <!%= 1.week * 1000%>,
                //pointStart: <!%= @startpoint.to_i * 1000 %>,
                data: <%=  data_chart(@data) %>

            }]

        });

    });
</script>

<div id="BMI" style="width:100%; height:110%;"></div>
</div>