<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th><%= t 'other.rank' %></th>
      <th></th>
      <th><%= t 'other.name' %></th>
      <th></th>
      <th><%= sortable('total_cal',"#{t 'other.totalcal'}") %></th>
      <th><%= sortable('total_min',"#{t 'other.totalTime'}") %></th>
      <th><%= t 'other.lastactivity' %></th>
    </tr>
    </thead>

    <tbody>
    <% rank = 0%>
    <% @friends.each do |friend| %>
        <% rank+=1 %>
        <tr >
          <td class="<%= friend.id == current_user.id ? 'your-row' : '' %>"><%= rank %></td>
          <td><%= image_tag friend.profile.avatar.url(:thumb) ,{id: friend.profile.id , class: "img-circle img-responsive img-thumbnail" , width: "100" , height: "100" , alt: "Profile"}%></td>
          <td class="<%= friend.id == current_user.id ? 'your-row' : '' %>"><%= friend.profile.firstname %> <%= friend.profile.lastname %></td>
          <td></td>
          <td class="<%= friend.id == current_user.id ? 'your-row' : '' %>"><%= friend.total_cal %></td>
          <td class="<%= friend.id == current_user.id ? 'your-row' : '' %>"><%= Time.at(friend.total_min).utc.strftime("%H:%M:%S") %></td>
          <td <% if friend.id == current_user.id %> style="color: #4b4878;font-style: italic;font-weight: bolder;" <% end  %>><small><%= last_workout_describe(friend.last_workout) %></small></td>
        </tr>
    <% end  %>
    </tbody>
  </table>
</div>