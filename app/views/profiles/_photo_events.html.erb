<div class="row">
  <% for photo_event in @photos   %>

      <div class="col-sm-6 col-md-4">
        <div class="thumbnail" style="background-color: white">
          <%= image_tag photo_event.photo.url(:medium) ,{ :class => " img-responsive" , width: "300" , height: "200" , alt: "Profile"}%>
          <div class="caption">
            <h3 style="color: #000000"><%= date_depend_on_language(photo_event.created_at)  %></h3>
            <p style="color: #000000"><%= photo_event.summary %></p>
            <% if photo_event.profile_id == current_user.profile_id %>
                <p><%= link_to raw('<i class="fa fa-times"></i>'), photo_event, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger',style: 'position: absolute;right: 0px; top: 0px;border-radius: 50px; color: white;' %> </p>
            <% end  %>
            <!--<a href="#" class="btn btn-link" style="color: #373464"><i class="fa fa-heart-o fa-2x" ></i>Like</a>-->
          </div>
        </div>
      </div>
  <% end %>
</div>