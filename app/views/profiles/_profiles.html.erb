  <div class="table-responsive" >
    <table class="table table-hover" >
      <thead>
      <tr>
        <th><%=t 'other.profpic'%></th>
        <th><%=t 'other.username'%></th>
        <th><%=t 'other.firstname'%></th>
        <th><%=t 'other.lastname'%></th>
        <th><%=t 'other.birthdate'%></th>
        <th><%=t 'other.country'%></th>
        <th><%=t 'other.city'%></th>
        <th><%= t('other.role') %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @profiles.each do |profile| %>
          <tr>
            <td><%= image_tag profile.avatar.url(:thumb) ,{id: profile.id , class: "img-circle img-responsive img-thumbnail" , width: "100" , height: "100" , alt: "Profile"}%>
            <td><%= profile.user.email %></td>
            <td><%= profile.firstname %></td>
            <td><%= profile.lastname %></td>
            <td><%= profile.birthdate %></td>
            <td><%= profile.country.capitalize %></td>
            <td><%= profile.city.capitalize %></td>
            <td></td>
            <td><%= link_to raw("<span class='glyphicon glyphicon-list-alt'></span> #{t 'other.show'}"), profile %></td>
            <td><%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> #{t 'other.edit'} "), edit_profile_path(profile) %></td>
            <td><%= link_to raw("<span class='glyphicon glyphicon-remove'></span> #{t 'other.remove'}"), profile, method: :delete, data: { confirm: "Are You Sure?" } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= will_paginate @profiles, renderer: BootstrapPagination::Rails %>

