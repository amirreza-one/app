<div >
  <table class="table">
    <tbody>
    <% @request_friendship.each do |request| %>
        <tr>
          <td><%=image_tag request.user.profile.avatar.url(:thumb) ,{id: request.user.profile.id , class: "img-circle img-responsive img-thumbnail" , width: "100" , height: "100" , alt: "Profile"}%>
          <td style="direction: ltr"><%= link_to highlight(request.user.profile.firstname+" "+request.user.profile.lastname+" ("+request.user.email+")" ,request.user.profile.firstname+" "+request.user.profile.lastname,:highlighter => '<strong>\1</strong>') ,request.user.profile , class: "btn btn-link" %> </td>
          <td></td>
          <td></td>
          <td><%=link_to t('other.accept'), friendships_path(:friend_id => request.user,profile_id: request.user.profile_id,request_id: request.id), method: :post,remote: true , class: "btn btn-link"%></td>
          <td><%=link_to t('other.ignore'), request, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" , remote: true%></td>
        </tr>
    <% end %>
    </tbody>
  </table>
 </div>